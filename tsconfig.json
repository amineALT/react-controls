{
  "compilerOptions": {
    "types": [ "node", "jest" ],
     "moduleResolution": "node",
    "target": "ES5",
    "sourceMap": true,
    "removeComments": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist/",
    "jsx": "react",
    "lib": ["es7", "dom"],
    "allowJs": false,
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/Common/*",
        "src/Component/*",
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.*",
    "**/*.spec.*",
    "**/*.mock.*"
  ]
}
